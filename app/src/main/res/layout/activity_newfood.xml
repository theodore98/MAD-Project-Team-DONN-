<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".newfood"
    tools:layout_editor_absoluteY="25dp">


    <Button
        android:id="@+id/confirm"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:background="#49A64D"
        android:text="@string/confirm"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addimage"
        app:layout_constraintVertical_bias="0.659" />

    <EditText
        android:id="@+id/Name"
        android:layout_width="269dp"
        android:layout_height="45dp"
        android:layout_marginTop="80dp"
        android:autofillHints=""
        android:background="@drawable/custom_input"
        android:drawableEnd="@drawable/ic_baseline_emoji_food_beverage_24"
        android:drawableRight="@drawable/ic_baseline_emoji_food_beverage_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/Name"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/Price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/Price"
        android:layout_width="269dp"
        android:layout_height="45dp"
        android:background="@drawable/custom_input"
        android:drawableEnd="@drawable/ic_baseline_monetization_on_24"
        android:drawableRight="@drawable/ic_baseline_monetization_on_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/Price"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/descript"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/Name"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/descript"
        android:layout_width="269dp"
        android:layout_height="45dp"
        android:layout_marginBottom="80dp"
        android:autofillHints=""
        android:background="@drawable/custom_input"
        android:drawableEnd="@drawable/ic_baseline_description_24"
        android:drawableRight="@drawable/ic_baseline_description_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="@string/description"
        android:inputType="textPersonName"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toTopOf="@+id/addimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Price"
        tools:ignore="LabelFor" />


    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="269dp"
        android:layout_height="45dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/custom_spinner"
        android:drawablePadding="10dp"

        app:layout_constraintBottom_toTopOf="@+id/confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descript"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="154dp"
        android:layout_height="43dp"
        android:text="@string/fd_prof"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toTopOf="@+id/Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351" />

    <ImageView
        android:id="@+id/foodIM"
        android:layout_width="146dp"
        android:layout_height="77dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="21dp"
        android:contentDescription="@string/foodim"
        app:layout_constraintBottom_toTopOf="@+id/confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner1" />

    <ImageButton
        android:id="@+id/addimage"
        android:layout_width="47dp"
        android:layout_height="44dp"

        android:drawable="@drawable/ic_baseline_add_a_photo_24"
        app:layout_constraintBottom_toBottomOf="@+id/foodIM"
        app:layout_constraintEnd_toEndOf="@+id/foodIM"
        app:layout_constraintStart_toStartOf="@+id/foodIM"
        app:layout_constraintTop_toTopOf="@+id/foodIM"
        android:background="@drawable/ic_baseline_add_a_photo_24"
        android:contentDescription="TODO" />

</androidx.constraintlayout.widget.ConstraintLayout>